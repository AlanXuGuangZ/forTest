<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ad_weather_data"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="@dimen/today_forecast_list_item_vertical_padding"
    android:paddingTop="@dimen/today_forecast_list_item_vertical_padding"
    android:background="@drawable/list_today_touch_selector"
    >

    <TextView
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:fontFamily="sans-serif"

    />

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        tools:src="@drawable/art_clear"
        android:id="@+id/weather_icon"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/data"
        app:layout_constraintRight_toLeftOf="@+id/data"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_weather_description"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/weather_icon"
        app:layout_constraintRight_toRightOf="@+id/weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/weather_icon"
        android:fontFamily="sans-serif"/>

    <TextView
        android:text="max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_maxTemp"
        android:textSize="72sp"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/data"
        app:layout_constraintHorizontal_bias="0.63"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:text="min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_minTemp"
        android:textSize="36sp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@+id/tv_maxTemp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_maxTemp"
        app:layout_constraintTop_toBottomOf="@+id/tv_maxTemp"
        android:fontFamily="sans-serif-light"/>
</android.support.constraint.ConstraintLayout>