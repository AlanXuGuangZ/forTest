<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/entrance_recipe"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="1dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:background="@drawable/list_touch_selector">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="388dp"
        android:layout_height="190dp"
        android:layout_above="@+id/re_menu_txt"

        app:layout_constraintBottom_toTopOf="@+id/ingredient_process_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

    </com.youth.banner.Banner>

    <TextView
        android:id="@+id/re_recipe_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="预订厨师"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/recipe_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/recipe_icon"
        app:layout_constraintTop_toBottomOf="@+id/recipe_icon" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toEndOf="@+id/recipe_icon"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_clear" />

    <TextView
        android:id="@+id/re_menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="预订菜谱"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/menu_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/menu_icon"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon" />

    <ImageView
        android:id="@+id/ingredient_process_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintStart_toEndOf="@+id/menu_icon"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/art_snow" />

    <TextView
        android:id="@+id/pro_ingredient_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="食材加工"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ingredient_process_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ingredient_process_icon"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_process_icon" />

    <ImageView
        android:id="@+id/personal_tailor_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingredient_process_icon"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:src="@drawable/art_light_rain" />

    <TextView
        android:id="@+id/tailor_personal_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="私人定制"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/personal_tailor_icon"
        app:layout_constraintTop_toBottomOf="@+id/personal_tailor_icon" />

    <TextView
        android:id="@+id/daily_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日推荐"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_recipe_txt"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/recipe_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:src="@drawable/art_light_rain" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />


</android.support.constraint.ConstraintLayout>